     <style>
    .loader-init {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #fff;
      transition: opacity 0.75s, visibility 0.75s;
      z-index: 9999;
      flex-direction: column;
    }

    .loader-init--hidden {
      opacity: 0;
      visibility: hidden;
    }

    .loader-init .logo_span {
      content: url('{{ store.logo }}');
      max-width: 200px;
    }

    .loader {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      display: block;
      margin: 15px auto;
      position: relative;
      color:#5a96ae;
      box-sizing: border-box;
      animation: animloader 1s linear infinite alternate;
    }

    .loader-init .loader::before {
      display: none;
    }

    @keyframes animloader {
      0% {
        box-shadow: -38px -12px, -14px 0, 14px 0, 38px 0;
      }

      33% {
        box-shadow: -38px 0px, -14px -12px, 14px 0, 38px 0;
      }

      66% {
        box-shadow: -38px 0px, -14px 0, 14px -12px, 38px 0;
      }

      100% {
        box-shadow: -38px 0, -14px 0, 14px 0, 38px -12px;
      }
    }

.whatsapp-icon {
    position: fixed;
    right: 22px;
    bottom: 22px;
    z-index: 9;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: #1ec35b;
    color: #fff !important;
    padding: 9px;
    border-radius: 50%;
    overflow: hidden;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    -ms-border-radius: 50%;
    -o-border-radius: 50%;
}

.whatsapp-icon svg{
  width: 100%;
  height: 100%;
}
  </style>

  <script>
    window.addEventListener("load", () => {
      const loader = document.querySelector(".loader-init");
      loader.classList.add("loader-init--hidden");
      loader.addEventListener("transitionend", () => {
        if (!document.querySelector(".loader-init")) return;
        document.body.removeChild(loader);
      });
    });
  </script>
