{% set important_links = theme.settings.get('important_links') %}
<header class="store-header">

  {# Main Nav #}
  <div id="mainnav" class="main-nav-container shadow-default bg-white flex items-center bg_main_nav">
      <div class="inner bg-inherit w-full">
          <div class="container">

              <div class="hedear_flex">
                  <div class="flex_right_content">
                      <a class="lg:hidden mburger mburger--collapse leading-none" href="#mobile-menu" aria-label="Open-menu">
                        <i class="sicon-menu text-primary text-2xl"></i>
                      </a>
                      <a class="navbar-brand" href="{{ store.url }}">
                          <img fetchpriority="high" width="100%" height="100%" loading="eager" src="{{ store.logo }}" alt="{{ store.name }} logo">
                          {% if is_page('index') %}
                            <h1 class="sr-only">{{ store.name }}</h1>
                          {% else %}
                            <h2 class="sr-only">{{ store.name }}</h2>
                          {% endif %}
                      </a>
                  </div>

                  <div class="menu_mahasin">
                  <custom-main-menu></custom-main-menu>
                  </div>

                  <div class="flex_left_content">
                    <div class="div_style">
                    {% if user.type=='user' %}
                        <salla-user-menu avatar-only show-header></salla-user-menu>
                      {% else %}
                          <button class="header-btn" aria-label="user-icon" onclick="salla.event.dispatch('login::open')">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" color="#010f1c" fill="none">
                       <path d="M22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12Z" stroke="#010f1c" stroke-width="1.5"></path>
                      <path d="M14.75 9.5C14.75 11.0188 13.5188 12.25 12 12.25C10.4812 12.25 9.25 11.0188 9.25 9.5C9.25 7.98122 10.4812 6.75 12 6.75C13.5188 6.75 14.75 7.98122 14.75 9.5Z" stroke="#010f1c" stroke-width="1.5"></path>
                     <path d="M5.49994 19.0001L6.06034 18.0194C6.95055 16.4616 8.60727 15.5001 10.4016 15.5001H13.5983C15.3926 15.5001 17.0493 16.4616 17.9395 18.0194L18.4999 19.0001" stroke="#010f1c" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                      </button>
                      {% endif %}

                      <span class="name-icon">حسابي</span>
                    </div>
             
              <div class="div_style">
             <div class="header-buttons">
              {% if store.settings.is_multilingual or store.settings.currencies_enabled %}
                  <button type="button" onclick="salla.event.dispatch('localization::open')" class="">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" color="#010f1c" fill="none">
								<path d="M22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22C17.5228 22 22 17.5228 22 12Z" stroke="#010f1c" stroke-width="1.5"></path>
								<path d="M20 5.69899C19.0653 5.76636 17.8681 6.12824 17.0379 7.20277C15.5385 9.14361 14.039 9.30556 13.0394 8.65861C11.5399 7.6882 12.8 6.11636 11.0401 5.26215C9.89313 4.70542 9.73321 3.19045 10.3716 2" stroke="#010f1c" stroke-width="1.5" stroke-linejoin="round"></path>
								<path d="M2 11C2.7625 11.6621 3.83046 12.2682 5.08874 12.2682C7.68843 12.2682 8.20837 12.7649 8.20837 14.7518C8.20837 16.7387 8.20837 16.7387 8.72831 18.2288C9.06651 19.1981 9.18472 20.1674 8.5106 21" stroke="#010f1c" stroke-width="1.5" stroke-linejoin="round"></path>
								<path d="M22 13.4523C21.1129 12.9411 20 12.7308 18.8734 13.5405C16.7177 15.0898 15.2314 13.806 14.5619 15.0889C13.5765 16.9775 17.0957 17.5711 14 22" stroke="#010f1c" stroke-width="1.5" stroke-linejoin="round"></path>
							</svg>
                  </button>
                  <salla-localization-modal></salla-localization-modal>
              {% endif %}
              </div>

              <span class="name-icon">اللغة والعملة</span>
              </div>
       
                      <div class="div_style">
                        <salla-cart-summary>
                        <i slot="icon" class="header-btn__icon icon sicon-shopping-bag"></i>
                      </salla-cart-summary>
                        <span class="name-icon">السلة</span>
                      </div>
                  
                  </div>
              </div>
          </div>
      </div>
  </div>
</header>
