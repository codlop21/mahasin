<div class="bg_s-reviwes">
	<div class="container">
		<section class="s-block s-block--testimonials section_marg">
			<div class="head_s-reviews">
				<h1 class="s-reviews-header">{{component.sectiontitle}}</h1>
				<span class="span_num">{{component.sectiontitledesc}}</span>
			</div>

			<salla-slider type="carousel" block-title="" show-controls="false" pagination="false" controls-outer
				auto-play slides-per-view="3" id="special-products-{{ position }}-slider">
